{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": [ "es2017", "dom" ],
    "moduleResolution": "node",
    "rootDir": "./src/",
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "compiled"
  },
  "exclude": [ "node_modules", "build", "webpack", "compiled", "correctModuleNames.js", "**/*.correctModuleNames.js" ],
  "types": [ "typePatches" ]
}